<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvCarModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_2x"
        android:layout_marginTop="@dimen/margin_medium_1x"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/dummy_car_model"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/margin_medium_3x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCarSerialNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/dummy_car_serial_number"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium_3x"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/tvCarModel"
        app:layout_constraintTop_toBottomOf="@id/tvCarModel" />

    <TextView
        android:id="@+id/tvConfirmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_1x"
        android:background="@drawable/bg_ripple_rounded_button"
        android:backgroundTint="@color/colorBlue"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="@dimen/margin_small_1x"
        android:paddingTop="@dimen/margin_mini_2x"
        android:paddingEnd="@dimen/margin_small_1x"
        android:paddingBottom="@dimen/margin_mini_2x"
        android:text="Confirmed"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small_1x"
        app:layout_constraintBottom_toBottomOf="@id/tvCarSerialNumber"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/tvCarSerialNumber"
        app:layout_constraintTop_toTopOf="@id/tvCarSerialNumber" />


    <TextView
        android:id="@+id/tvStartDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2x"
        android:fontFamily="@font/poppins_medium"
        android:text="Start date"
        android:textColor="@color/colorTextLightBlack"
        android:textSize="@dimen/text_size_small_2x"
        app:layout_constraintEnd_toStartOf="@+id/tvEndDateLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/tvCarSerialNumber"
        app:layout_constraintTop_toBottomOf="@id/tvCarSerialNumber" />

    <TextView
        android:id="@+id/tvStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Mon, 1 Nov 20"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/text_size_medium_1x"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/tvStartDateLabel"
        app:layout_constraintTop_toBottomOf="@id/tvStartDateLabel" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="11:45am"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/text_size_medium_1x"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/tvStartDate"
        app:layout_constraintTop_toBottomOf="@id/tvStartDate" />

    <TextView
        android:id="@+id/tvEndDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_2x"
        android:layout_marginTop="@dimen/margin_medium_2x"
        android:layout_marginEnd="@dimen/margin_medium_1x"
        android:fontFamily="@font/poppins_medium"
        android:text="End date"
        android:textColor="@color/colorTextLightBlack"
        android:textSize="@dimen/text_size_small_2x"
        app:layout_constraintEnd_toStartOf="@+id/layoutDuration"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/tvStartDateLabel"
        app:layout_constraintTop_toBottomOf="@id/tvCarSerialNumber" />

    <TextView
        android:id="@+id/tvEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Tue, 2 Nov 20"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/text_size_medium_1x"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/tvEndDateLabel"
        app:layout_constraintTop_toBottomOf="@id/tvEndDateLabel" />

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="11:45am"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/text_size_medium_1x"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/tvEndDateLabel"
        app:layout_constraintTop_toBottomOf="@id/tvEndDate" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium_1x"
        android:background="@drawable/bg_ripple_rounded_button"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/tvStartTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvEndDateLabel"
        app:layout_constraintTop_toTopOf="@id/tvStartDateLabel">

        <TextView
            android:id="@+id/tvDurationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small_1x"
            android:fontFamily="@font/poppins_medium"
            android:text="Duration"
            android:textColor="@color/colorTextLightBlack"
            android:textSize="@dimen/text_size_small_2x"
            app:layout_constraintEnd_toEndOf="@+id/tvDurationHour"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/tvDurationDay"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDurationDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium_1x"
            android:layout_marginEnd="@dimen/margin_medium_1x"
            android:fontFamily="@font/poppins_medium"
            android:text="02 :"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium_2x"
            app:layout_constraintEnd_toStartOf="@+id/tvDurationHour"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDurationLabel" />

        <TextView
            android:id="@+id/tvDurationDayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="days"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small_2x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvDurationHourLabel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDurationDay"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/tvDurationHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_medium_1x"
            android:fontFamily="@font/poppins_medium"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium_2x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvDurationDay"
            app:layout_constraintTop_toBottomOf="@id/tvDurationLabel" />

        <TextView
            android:id="@+id/tvDurationHourLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small_1x"
            android:fontFamily="@font/poppins_regular"
            android:text="hours"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small_2x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvDurationDayLabel"
            app:layout_constraintTop_toTopOf="@+id/tvDurationDayLabel" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddToCalendar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_1x"
        android:layout_marginTop="@dimen/margin_medium_1x"
        android:layout_marginEnd="@dimen/margin_medium_1x"
        android:paddingTop="@dimen/margin_small_2x"
        android:paddingBottom="@dimen/margin_small_2x"
        android:fontFamily="@font/poppins_regular"
        android:text="Add to calendar"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_small_2x"
        app:icon="@drawable/ic_add"
        app:iconGravity="textStart"
        app:iconSize="@dimen/dimen_24"
        app:layout_goneMarginBottom="@dimen/margin_medium_1x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnExtend"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutDuration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/colorTextLightBlack"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExtend"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_small_1x"
        android:layout_marginEnd="@dimen/margin_medium_1x"
        android:fontFamily="@font/poppins_regular"
        android:paddingTop="@dimen/margin_small_2x"
        android:paddingBottom="@dimen/margin_small_2x"
        android:text="Extend"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_small_2x"
        android:textStyle="bold"
        app:icon="@drawable/ic_extend"
        app:iconGravity="textStart"
        app:iconSize="@dimen/dimen_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnAddToCalendar"
        app:layout_constraintTop_toTopOf="@id/btnAddToCalendar"
        app:layout_constraintBottom_toBottomOf="@id/btnAddToCalendar"
        app:strokeColor="@color/colorTextLightBlack"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>